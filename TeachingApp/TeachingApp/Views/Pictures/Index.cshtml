@model TeachingApp.Models.PictureViewModel

@{ViewBag.Title = "Bild Test";
}

<div class="col-md-offset-4">
    <h3>@ViewBag.Message</h3>
</div>

<div class="col-md-offset-4 col-md-8" style="margin-top: 0px;">
    <h2>Picture test</h2>
    <img class="img-responsive" src="~/Images/@Url.Content(Model.Name)" width="400" height="300">
</div>

@using (Html.BeginForm("Index", "Pictures", FormMethod.Post))
{
@Html.AntiForgeryToken()
    
<div class="form-group">
    <div class="col-md-offset-4 col-md-8">
        <hr />
        Vad föreställer bilden?
        @Html.HiddenFor(m => m.ID)
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.Word)
        @Html.EditorFor(m => m.UserResponse)
        <hr />
        Ange ditt namn!
        @Html.EditorFor(m => m.HighscoreName)
        <input type="submit" value="Submit" class="btn btn-default" />
        <hr />
        @Html.ActionLink("End your Test", "Index", "Home")
    </div>
</div>
}

