@model TeachingApp.Models.ColorViewModel

@{
    ViewBag.Title = "Color Test";
}

<h4>@ViewBag.Message</h4>

<h3>Click on the color @Model.ColorText</h3>

@using (Html.BeginForm("index", "Colors", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <hr />
        @Html.HiddenFor(m => m.ID)
        @Html.HiddenFor(m => m.ColorText)
        <input type="submit" name="UserResponse" class="btn-danger btn-lg" value="1" />
        <input type="submit" name="UserResponse" class="btn-success btn-lg" value="2" />
        <input type="submit" name="UserResponse" class="btn-primary btn-lg" value="3" />
        <input type="submit" name="UserResponse" class="btn-warning btn-lg" value="4" />
        <input type="submit" name="UserResponse" class="btn-default btn-lg" value="5" />
        <hr />
        Ange ditt namn!
        @Html.EditorFor(m => m.HighscoreName)
        <hr />
        @Html.ActionLink("End your Test", "Index", "Home")
    </div>
