@model TeachingApp.Models.SentenceViewModel
@{ViewBag.Title = "Sentence Test";
}

<h3>@ViewBag.Message</h3>
<h2>Sentence test</h2>
<h2>@Model.Text</h2>

@using (Html.BeginForm("Index", "Sentences", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <hr />
        Vilken mening kan du bilda med hjälp av orden?
        <input type="hidden" name="ID" value="@Model.ID">
        <input type="hidden" name="Name" value="@Model.Text">
        <input type="text" name="UserResponse">
        <input type="submit" value="Submit" class="btn btn-default" />
        <hr />
        @Html.ActionLink("End your Test", "Index", "Home")
    </div>
}

